#include <iostream>
using namespace std;

// Fungsi untuk mengonversi detik ke jam, menit, dan detik
void konversiWaktu(int totalDetik) {
    int jam = totalDetik / 3600;
    int menit = (totalDetik % 3600) / 60;
    int detik = totalDetik % 60;

    cout << "\nHasil Konversi:\n";
    cout << totalDetik << " detik = "
         << jam << " Jam, "
         << menit << " Menit, "
         << detik << " Detik.\n";
}

int main() {
    int totalDetik;

    cout << "Masukkan jumlah detik (harus lebih dari 1): ";
    cin >> totalDetik;

    if (totalDetik <= 1) {
        cout << "Input tidak valid. Harus lebih dari 1 detik.\n";
    } else {
        konversiWaktu(totalDetik);
    }

    return 0;
}
